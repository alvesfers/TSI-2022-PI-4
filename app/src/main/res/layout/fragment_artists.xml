<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ArtistsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtCategorias"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:text="Categorias"
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/linearLayoutCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="168dp"
                tools:ignore="SpeakableTextPresentCheck">

                <LinearLayout
                    android:id="@+id/linearHorizontalCategorias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="5sp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgCategoria"
                            android:layout_width="125dp"
                            android:layout_height="125dp"
                            app:srcCompat="@drawable/_55516_800_auto"
                            tools:src="@drawable/_55516_800_auto" />

                        <TextView
                            android:id="@+id/nomeCategoria"
                            android:layout_width="129dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10sp"
                            android:text="Nome categoria"
                            android:textAlignment="center"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="5sp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgCategoria2"
                            android:layout_width="125dp"
                            android:layout_height="125dp"
                            app:srcCompat="@drawable/_55516_800_auto"
                            tools:src="@drawable/_55516_800_auto" />

                        <TextView
                            android:id="@+id/nomeCategoria2"
                            android:layout_width="129dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10sp"
                            android:text="Nome Categoria"
                            android:textAlignment="center"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="5sp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgCategoria3"
                            android:layout_width="125dp"
                            android:layout_height="125dp"
                            android:src="@drawable/_55516_800_auto" />

                        <TextView
                            android:id="@+id/nomeCategoria3"
                            android:layout_width="129dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10sp"
                            android:text="Nome Categoria"
                            android:textAlignment="center"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="5sp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgCategoria4"
                            android:layout_width="125dp"
                            android:layout_height="125dp"
                            app:srcCompat="@drawable/_55516_800_auto"
                            tools:src="@drawable/_55516_800_auto" />

                        <TextView
                            android:id="@+id/nomeCategoria4"
                            android:layout_width="129dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10sp"
                            android:text="Nome Categoria"
                            android:textAlignment="center"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="5sp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgCategoria5"
                            android:layout_width="125dp"
                            android:layout_height="125dp"
                            app:srcCompat="@drawable/_55516_800_auto"
                            tools:src="@drawable/_55516_800_auto" />

                        <TextView
                            android:id="@+id/nomeCategoria5"
                            android:layout_width="129dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10sp"
                            android:text="Nome Categoria"
                            android:textAlignment="center"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>
        </LinearLayout>

        <TextView
            android:id="@+id/txtMaisPedidos"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="Produtos mais pedidos"
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/linearLayoutProdutos"
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="168dp"
                tools:ignore="SpeakableTextPresentCheck">

                <LinearLayout
                    android:id="@+id/linearHorizontalProdutos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="5sp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgProduto"
                            android:layout_width="125dp"
                            android:layout_height="125dp"
                            app:srcCompat="@drawable/_55516_800_auto"
                            tools:src="@drawable/_55516_800_auto" />

                        <TextView
                            android:id="@+id/nomeProduto"
                            android:layout_width="129dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10sp"
                            android:text="Nome produto"
                            android:textAlignment="center"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="5sp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgProduto2"
                            android:layout_width="125dp"
                            android:layout_height="125dp"
                            app:srcCompat="@drawable/_55516_800_auto"
                            tools:src="@drawable/_55516_800_auto" />

                        <TextView
                            android:id="@+id/nomeProduto2"
                            android:layout_width="129dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10sp"
                            android:text="Nome produto"
                            android:textAlignment="center"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="5sp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgProduto3"
                            android:layout_width="125dp"
                            android:layout_height="125dp"
                            android:src="@drawable/_55516_800_auto" />

                        <TextView
                            android:id="@+id/nomeProduto3"
                            android:layout_width="129dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10sp"
                            android:text="Nome produto"
                            android:textAlignment="center"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="5sp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgProduto4"
                            android:layout_width="125dp"
                            android:layout_height="125dp"
                            app:srcCompat="@drawable/_55516_800_auto"
                            tools:src="@drawable/_55516_800_auto" />

                        <TextView
                            android:id="@+id/nomeProduto4"
                            android:layout_width="129dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10sp"
                            android:text="Nome Produto"
                            android:textAlignment="center"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="5sp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgProduto5"
                            android:layout_width="125dp"
                            android:layout_height="125dp"
                            app:srcCompat="@drawable/_55516_800_auto"
                            tools:src="@drawable/_55516_800_auto" />

                        <TextView
                            android:id="@+id/nomeProduto5"
                            android:layout_width="129dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10sp"
                            android:text="Nome Produto"
                            android:textAlignment="center"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>
        </LinearLayout>

    </LinearLayout>

</ScrollView>