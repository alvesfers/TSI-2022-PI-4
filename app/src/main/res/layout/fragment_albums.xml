<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary"
    tools:context=".fragments.AlbumsFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textBemVindoUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Bem Vindo(a), Usuário X"
        android:textColor="#FDF7F7"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textBemVindoUsuario">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="35dp">

            <ImageView
                android:id="@+id/imagePedidos"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="10dp"
                android:foreground="@android:drawable/ic_menu_sort_by_size"
                android:src="@drawable/_55516_800_auto" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="3dp"
                android:foreground="@android:drawable/ic_menu_mapmode"
                android:src="@drawable/_55516_800_auto" />

            <ImageView
                android:id="@+id/imageEditarPerfil"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="3dp"
                android:foreground="@android:drawable/ic_menu_edit"
                android:src="@drawable/_55516_800_auto" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal"
                android:text="Pedidos"
                android:textColor="#FBF6F6" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal"
                android:text="Endereços"
                android:textColor="#FBF6F6" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal"
                android:text="Editar Perfil"
                android:textColor="#FBF6F6" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageSobre"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="10dp"
                android:foreground="@android:drawable/ic_menu_info_details"
                android:src="@drawable/_55516_800_auto" />

            <ImageView
                android:id="@+id/imageBtnSair"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="3dp"
                android:foreground="@android:drawable/ic_menu_set_as"
                android:src="@drawable/_55516_800_auto" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal"
                android:text="Sobre o App"
                android:textColor="#FBF6F6" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal"
                android:text="Sair"
                android:textColor="#FBF6F6" />

        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>